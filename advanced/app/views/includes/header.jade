header#header
  .navbar.navbar-static-top
    .navbar-inner(role='navigation')
      .container
        a.brand(href='/') Comcast labs Conference Controller
        .nav-collapse.collapse
          ul.nav
            li
              a(href='/site/dashboard') Dashboard
          ul.nav.pull-right
            if (req.isAuthenticated())
              li
                a(href="/site/user/"+req.user.id, title="Profile") #{req.user.name}
              li
                a(href="/logout", title="logout") Logout
            else
              li
                a(href="/login", title="Login") Login
